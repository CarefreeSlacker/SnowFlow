<%= form_for @user, url: { action: :create } do |f| %>
    <%= render '/shared/error_messages' %>
    <br>
    <div class="center">
      <div>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>


      <div>
        <%= f.label :login %><br>
        <%= f.text_field :login %>
      </div>

      <div>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>

      <div>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>

      <%= f.hidden_field :role, value: 'admin' %>

      <br>
      <%= f.submit 'Create my account', :class => 'btn btn-large'  %>
    </div>
<% end %>