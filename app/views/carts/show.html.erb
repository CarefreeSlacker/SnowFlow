<%- model_class = Cart -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @cart.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_price) %>:</strong></dt>
  <dd><%= @cart.total_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_positions) %>:</strong></dt>
  <dd><%= @cart.total_positions %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_items) %>:</strong></dt>
  <dd><%= @cart.total_items %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_id) %>:</strong></dt>
  <dd><%= @cart.order_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:checkouted) %>:</strong></dt>
  <dd><%= @cart.checkouted %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              carts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cart_path(@cart), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cart_path(@cart),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
