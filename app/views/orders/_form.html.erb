  </div>
  <div class="control-group">
    <%= f.label :appartament , class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :appartament %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :floor , class: 'control-label' %>
    <div class="controls">
      <%= f.number_field :floor %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :personal_payment , class: 'control-label' %>
    <div class="controls">
      <%= f.check_box :personal_payment %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shipped , class: 'control-label' %>
    <div class="controls">
      <%= f.check_box :shipped %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Checkout" %>
  </div>
<% end %>
