
<%= will_paginate @users  %>
<table class="table">
  <tr>
    <th>Login:</th>
    <th>Name:</th>
    <th>Action:</th>
  </tr>

<% @users.each do |user| %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.name %></td>
      <td>
      <%= link_to 'view', user_path(user) %>
        <% if current_user.admin? %>
             | <%= link_to 'delete', user_path(user), method: :delete %>
            <% end %></td>
    </tr>
<% end %>
</table>
<%= will_paginate @users %>