
<%= form_for @user, url: user_path.to_s  do |f| %>
        <div class="span2">
          <p> Name: <%= @user.name %> </p>
          <p> Login: <%= @user.login %> </p>
          <p> Email: <%= @user.email %> </p> <!--  _field :email %> </p> -->
          <% if current_user.id == @user.id %>
              <p> <%= link_to 'Edit your profile', edit_user_path(@user) , class: 'btn btn-success' %> </p>
          <% end %>
        </div>
        <div class="span4">
          <% if @orders && (current_user == @user || current_user.admin? ) %>
              <% n = 1 %>
              <b> You have <%= pluralize @orders.size , 'order' %></b>
              <table class="table table-bordered">
                <tr>
                  <th>â„–</th>
                  <th>Total positions:</th>
                  <th>Total price:</th>
                  <th>Status:</th>
                </tr>
                <% @orders.each do |elem| %>
                    <% if elem.cart %>
                        <% if elem.done %>
                            <% status = 'done' %>
                            <% style = 'success' %>
                        <% else %>
                            <% status = 'processing' %>
                            <% style = 'error' %>
                        <% end %>
                        <tr class="<%= style %> ">
                          <td> Order #<%= elem.id %></td>
                          <td> <%= link_to 'Positions: ' + elem.cart.get_total_positions.to_s +
                                                   ', items: ' + elem.cart.get_total_items.to_s + ' ', order_path(elem) %> </td>
                          <td> <%= elem.cart.get_total_price %></td>
                          <td> <%= status %>  </td>
                        </tr>
                    <% end %>
                <% end %>
              </table>
              <div class="horizont-list">
                <%= will_paginate @orders %>
              </div>
          <% end %>
        </div>




<% end %>
