<%= form_for @order do |f| %>
    <!-- here i should add 'form-horizontal' class to form -->
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- initialize variables for interface -->
  <% order_user = User.find(@order.user_id) %>
  <% user_name = order_user.name %>
  <% user_login = order_user.login %>
  <% if @order.done %>
        <% status = @order.done %>
  <% else %>
        <% status = false %>
  <% end %>

  <!-- hidden fields for sending for cart_id and user_id -->
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :cart_id %>
  <%= f.hidden_field :done , value: status %>

  <div class="control-group">
    <%= f.label :Customer_name %><br>
    <%= label_tag :user_name,  "#{user_name}" %>
  </div>
  <div class="control-group">
    <%= f.label :Customer_login %><br>
    <%= label_tag :user_login,  "#{user_login}" %>
  </div>
  <div class="control-group">
    <%= f.label :country , class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :country %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :region , class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :region %>
    </div>
  </div>
    <div class="control-group">
      <%= f.label :city , class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :city %>
      </div>
    </div>
  <div class="control-group">
    <%= f.label :post_code , class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :post_code %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :lane , class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :lane %>
